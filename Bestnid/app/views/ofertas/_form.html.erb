<%= form_for @oferta, url: {action: "create"} do |f| %>

  <div class="field">
    <%= f.label :motivo %><br>
    <%= f.text_area :motivo, required: true, placeholder: 'Ingrese el motivo'%>
  </div>
  </br>
  <div class="field">
    <%= f.label :monto %><br>
    <%= f.number_field :monto, required: true, placeholder: 'Ingrese el monto'%>
  </div>
  </br>
  <div class="actions">
    <%= f.submit "Enviar oferta" %>
  </div>

<% end %>