<h1>Listar Productos</h1>

<head>
<style>
table, td {
    padding: 5px;
}
</style>
</head>

<table style="width:100%">
  <thead>
    <tr>
	  <th>Imagen</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Vencimiento</th>
	  <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
	    <td><%= image_tag(producto.prourl, size: "80") %></td>
        <td><%= producto.nombre %></td>
         <td><%= link_to 'Detalles', producto %></td>
        <td><%= producto.vencimiento %></td>
        <td><%= Categoria.find(producto.categoria_id).nombre %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if logged_in? and (not current_usuario.admin?)  %>
<%= link_to 'Nuevo Producto', :action => :new %>
<%end%>
