<% if  @productos.all.size == 0 %>
    </br> </br>
   <tr class="success"> <td colspan="3"> ¡Aún no publicaste ningún producto. Anímate y subasta en Bestnid! </tr>
<% else %>  
  <h1>Productos publicados</h1>

  <head>
  <style>
  table, td {
     padding: 5px;
  }
  </style>
  </head>

  <table style="width:100%">
     <thead>
      <tr>
      	 <th>Imagen</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Vencimiento</th>
  	   <th>Categoria</th>
      <th colspan="3"></th>
     </tr>
    </thead>

    <tbody>
    <% @productos.each do |producto| %>
      <tr>
	    <td><%= image_tag(producto.prourl, size: "80") %></td>
        <td><%= producto.nombre %></td>
         <td><%= link_to 'Detalles', producto %></td>
        <td><%= producto.vencimiento %></td>
        <td><%= Categoria.find(producto.categoria_id).nombre %></td>
      </tr>
    <% end %> 
    </tbody>
  </table>

<% end %>
  
  </br>  </br>

  <% if logged_in? and (not current_usuario.admin?)  %>
    <%= link_to 'Nuevo Producto', :action => :new %>
  <%end%>
