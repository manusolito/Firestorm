<h1>Listar Categoria</h1>

  <% if flash[:danger] %>
    <h4><font color="red"><div class="danger"><%= flash[:danger] %></div></font></h4>
  <% end %>
  
  <% if flash[:success] %>
    <h4><font color="blue"><div class="success"><%= flash[:success] %></div></font></h4>
  <% end %>

<head>
<style>
table,td {
    padding: 5px;
}
</style>
</head>
<table style="width:100%">

  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categoria.each do |categoria| %>
	<% if categoria.disponible==true %>
      <tr>
        <td><%= categoria.nombre %></td>
        <td><%= link_to 'Mostrar', categoria %></td>
      </tr>
    <%end%>
    <% end %>
  </tbody>
</table>

<br>

<% if logged_in? and current_usuario.admin? %>
<%= link_to 'Nueva Categoria', :action => :new %>
<%end%>