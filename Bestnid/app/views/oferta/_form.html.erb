<head>
<style>
div {
    padding: 5px;
}
</style>
</head>
<%= form_for @oferta do |f| %>

 <% if @oferta.errors.any? %>
    <div id="error_explanation">
      <h2><font color="red"> La oferta no puede ser gardada:</font></h2>

      <ul>
      <% @oferta.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :motivo %><br>
    <%= f.text_area :motivo, required: true, placeholder: 'Ingrese el motivo'%>
  </div>
  </br>
  <div class="field">
    <%= f.label :monto %><br>
    <%= f.number_field :monto, :class => 'text_field', :step => 'any', required: true, placeholder: 'Ingrese el monto'%>
  </div>
  
</br>
  <div class="actions">
    <%= f.submit "Enviar oferta", class: "btn btn-primary" %>
  </div>

<% end %>