<style>

.ventanaBorder {
  font-size: 85%;
    margin-left:auto;
    margin-right:auto;
    border: 10px solid #a1a1a1;
    padding: 0px 0px; 
    background: #B8B8B8;
    width: 300px;
    border-radius: 15px;
}

</style>


<head>
<style>
div {
    padding: 5px;
}
</style>
</head>
<center>
<div class="ventanaBorder">
  <center>
<div class="row">
  <div class="col-md-6 col-md-offset-4">
    <h2>Formulario de contacto</h2>
<%= form_for :contactos, url:contactos_path do |f| %>

 <% if @contacto.errors.any? %>
    <div id="error_explanation">
      <h2><font color="red"> El mensaje no puede ser enviado:</font></h2>

      <ul>
      <% @contacto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :asunto, " *Asunto" %><br>
    <%= f.text_area :asunto, required: true, placeholder: 'Ingrese el asunto'%>
  </div>
  </br>
  <div class="field">
    <%= f.label :mensaje, " *Mensaje" %><br>
    <%= f.text_area :mensaje, required: true, placeholder: 'Ingrese el mensaje'%>
  </div>
  
</br>

  <div class="actions">
    <%= f.submit "Enviar mensaje", class: "btn btn-primary" %>
  </div>
 </br></br> 
<%= link_to 'Atras', welcome_index_path %>
</div>
</div>
</center>
</div>
</center>
<% end %>