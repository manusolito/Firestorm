<div class="row">
  <div class="col-md-6 col-md-offset-4">
<h2> Modificar monto</h2>
</br>

<%= form_for @oferta do |f| %>

 <% if @oferta.errors.any? %>
    <div id="error_explanation">
      <h2><font color="red"> La oferta no puede ser guardada:</font></h2>

      <ul>
      <% @oferta.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h4><font color="red"> Los campos * son obligatorios</h4>
</br>
  <div class="field"><font color="black"> 
    <%= f.label :motivo, "El motivo no puede ser modificado" %><br>
    <%= f.text_area :motivo, required: true,disabled:"disabled" %>
  </div>
  </br>
  <div class="field">
    <%= f.label :monto, " *Monto" %><br>
    <%= f.number_field :monto, required: true, placeholder: 'Ingrese el monto', min: 0, :step => 0.01%>
  </div>
  
</br>

  <div class="actions">
    <%= f.submit "Modificar", class: "btn btn-primary" %>
  </div>

</br>
  <%= link_to 'Atras', oferta_path %>

</div>
</div>
<% end %>

