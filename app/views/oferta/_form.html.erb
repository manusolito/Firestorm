<head>
<style>
div {
    padding: 5px;
}
</style>
</head>
<div class="row">
  <div class="col-md-6 col-md-offset-4">
    <h1>Solicitud de oferta</h1>
<%= form_for :oferta, url:oferta_path do |f| %>

 <% if @oferta.errors.any? %>
    <div id="error_explanation">
      <h2><font color="red"> La oferta no puede ser guardada:</font></h2>

      <ul>
      <% @oferta.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :motivo, " *Motivo" %><br>
    <%= f.text_area :motivo, required: true, placeholder: 'Ingrese el motivo'%>
  </div>
  </br>
  <div class="field">
    <%= f.label :monto, " *Monto" %><br>
    <%= f.number_field :monto, required: true, placeholder: 'Ingrese el monto', min: 0, :step => 0.01%>
  </div>
  <%= f.hidden_field :producto_id, :value => params[:format]%>
  
</br>

  <div class="actions">
    <%= f.submit "Enviar oferta", class: "btn btn-primary" %>
  </div>
 </br></br> 
<%= link_to 'Atras', oferta_path %>
</div>
</div>

<% end %>